<% include partials/header %>
    <div class="wrapper">
        <div class="page">
            <div class="container page-inner">
                <div class="page-section">
                    <main class="auth">
                        <header id="auth-header" class="auth-header" style="background-color: transparent;padding-top:1.5em;">
                            <h1>
                                <font style="font-size: 40px;font-style: normal;"><strong><span style="color:#e67e22">NODEJS</span> TEMP</strong></font>
                                <span class="sr-only">Sign In</span>
                            </h1>
                            <p> 계정이 없으신가요?          <a href="/user/register">회원가입</a></p>
                        </header>
                        <form class="auth-form text-center" style="background-color: #f2f2f2" action="login" method="post">
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="text" id="username" name="username" class="form-control" placeholder="ID" required="" autofocus="">
                                    <label for="username">ID</label>
                                    <% if(errors.username){ %>
                                     <span class=""><%= errors.username %></span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="password" id="password" name="password" class="form-control" placeholder="비밀번호" required="">
                                    <label for="password">비밀번호</label>
                                    <% if(errors.password){ %>
                                     <span class=""><%= errors.password %></span>
                                    <% } %>
                                </div>
                            </div>
                            <% if(errors.login){ %>
                               <div class="">
                                <span class=""><%= errors.login %></span>
                               </div>
                              <% } %>
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block" type="submit">로그인</button>
                            </div>
                        </form>
                    </main>
			    </div>
            </div>
        </div>
    </div>
<% include partials/footer %>